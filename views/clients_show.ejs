<div class="bg-gradient"></div>
<div class="index">
    <div class="container">
        <% include ./partials/header %>

    <nav>
        <div class="nav--logo"><a href="/index"><img src="../img/logo_365.png" alt="Logo"></a></div>
        <div class="links">
            <div class="nav--link register-admin">
                <a href="/index">Dashboard</a>
                <div class="white--effect"></div>
            </div>
            <div class="nav--link register-admin">
                <a href="/admin/register">Register Admin</a>
                <div class="white--effect"></div>
            </div>
            <div class="nav--link features">
                <a href="/features">Features</a>
                <div class="white--effect"></div>
            </div>
            <div class="nav--link logout">
                <a href="/admin/logout">Logout</a>
                <div class="white--effect"></div>
            </div>
        </div>
    </nav>

    <% if(error && error.length > 0){ %>
        <h1 style="width:70%; margin: 0 auto;" class="message__landing message__landing--error"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> <%= error %></h1><br>
    <% } %>
    <% if(success && success.length > 0){ %>
        <h1 style="width:70%; margin: 0 auto;" class="message__landing message__landing--success"><i class="fa fa-check" aria-hidden="true"></i> <%= success %></h1><br>
    <% } %>

    <h1 class="page--title"><%= client.firstname %> <%= client.surname %></h1>
    <h1 class="page--subtitle--show"><%= client.email %></h1>



    <div class="transform__center">
    
    <a class="btn__table btn__table--btn" href="/clients/<%= client._id %>/edit">Edit</a>
    <form style="display:inline-block;" id="delete-form" action="/clients/<%= client._id %>?_method=DELETE" method="POST">
        <button class="btn__table" onclick="return confirm('Are you sure you want to delete: <%= client.firstname %> <%= client.surname %>?')">
            Delete
        </button>
    </form>
    

    </div> <!-- /.transform__center -->

    </div> <!-- .container -->
</div>